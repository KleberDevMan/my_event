<div class='nested-fields'>

  <div class="x_panel">
    <div class="x_title">
      <h2>Atividade</h2>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <div class="form-group">
        <%= f.label :titulo, class: 'mb-0' %>
        <%= f.text_field :titulo,
                         class: "form-control",
                         placeholder: 'Título' %>
      </div>

      <div class="form-group">
        <%= f.label :descricao, class: "mb-0" %>
        <%= f.text_area :descricao,
                        class: "form-control",
                        placeholder: 'Descrição' %>
      </div>
      <div class="row">
        <div class="col-md-12 col-sm-6">
          <div class="form-group">
            <%= f.label :hora, class: "mb-0" %>
            <%= f.text_field :hora, class: 'form-control time' %>
          </div>
        </div>
      </div>
    <%= link_to_remove_association "remover atividade", f, {class: 'red', style: 'float: right;'} %>
    </div>
  </div>
</div>