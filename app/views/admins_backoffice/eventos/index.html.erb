<div class="col-md-12 col-sm-6  ">
  <div class="x_panel">
    <div class="x_title">
      <h2>Eventos</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li class="houver-link">
          <%= link_to new_admins_backoffice_evento_path, class: 'btn btn-success', style: 'color: white;' do %>
            <i class="fa fa-plus-circle text-white"></i> Novo
          <% end %>
<!--          <a class="btn btn-success">Success</a>-->
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">

      <div class="table-responsive">
      <table class="table table-hover">
        <thead>
        <tr>
          <th width="50%">Título</th>
          <th width="25%">Código</th>
          <th width="25%">Ações</th>
        </tr>
        </thead>
        <tbody>
        <% @eventos.each do |evento| %>
          <tr>
            <td width="50%"><%= evento.titulo %></td>
            <td width="25%"><%= evento.codigo %></td>
            <td width="25%" class="acoes">
              <%= link_to 'Visualizar', admins_backoffice_evento_path(evento), style: 'color: blue' %>
              <%= link_to 'Editar', edit_admins_backoffice_evento_path(evento), style: 'color: green' %>
              <%= link_to 'Excluir', "/admins_backoffice/eventos/#{evento.id}", method: :delete, data: {confirm: 'Você tem certeza?'}, style: 'color: red' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>

    </div>
  </div>
</div>