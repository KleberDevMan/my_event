<% if @users.empty? %>
<h2>Nenhum inscrito ainda.</h2>
<% else %>
  <div class="x_panel">
    <div class="x_title">
      <h2>Lista de inscritos</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>


    <div class="x_content">

      <table class="table table-bordered">
        <thead>
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>CPF</th>
          <th>email</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row">1</th>
            <td><%= user[:name] %></td>
            <td><%= user[:cpf] %></td>
            <td><%= user[:email] %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>


  </div>
<% end %>