    <%= form.label :nome %>
    <%= form.text_field :nome, accept: 'image/png,image/gif,image/jpeg' %>
  </div>

  <div class="field">
    <%= form.label :imagens %>
    <%= form.file_field :imagens, multiple: true %>
    <br> <strong>ou <br> link:</strong>
    <%= form.text_field :img_link, placeholder: 'http://imga.com' %>
  </div>

  <div class="field">
    <%= form.label :descricao %>
    <%= form.text_field :descricao %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
