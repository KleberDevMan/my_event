<%= form_with(model: parceiro, local: true) do |form| %>
  <% if parceiro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(parceiro.errors.count, "error") %> prohibited this parceiro from being saved:</h2>

      <ul>
      <% parceiro.errors.full_messages.each do |message| %>
